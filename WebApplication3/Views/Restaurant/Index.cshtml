@{
    ViewData["Title"] = "Restauracje";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <style>
        /* CSS dla tabeli */
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        /* CSS dla opisu restauracji */
        #restaurant-description {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div id="restaurant-list"></div>

    <script>
        // JavaScript
        document.addEventListener("DOMContentLoaded", fetchData);

        async function fetchData() {
            try {
                const response = await fetch("https://localhost:44352/api/restaurant/");
                const data = await response.json();
                displayRestaurantList(data);
            } catch (error) {
                console.error(error);
            }
        }

        function displayRestaurantList(restaurants) {
            const restaurantListDiv = document.getElementById("restaurant-list");

            restaurants.forEach(restaurant => {
                const restaurantDiv = document.createElement("div");
                restaurantDiv.innerHTML = `
                            <h1>${restaurant.name}</h1>
                            <p>${restaurant.description}</p>
                            <p>Category: ${restaurant.category}</p>
                            <p>Delivery available: ${restaurant.hasDelivery ? "Yes" : "No"}</p>
                            <p>Address: ${restaurant.street}, ${restaurant.postalCode} ${restaurant.city}</p>
                            <h3>Dishes:</h3>
                        `;

                const dishesTable = document.createElement("table");
                dishesTable.classList.add("dishes-table");

                // Tworzenie nagłówków tabeli
                const tableHeader = document.createElement("thead");
                const headerRow = document.createElement("tr");
                const headers = ["ID", "Name", "Description", "Price"];

                headers.forEach(headerText => {
                    const header = document.createElement("th");
                    header.textContent = headerText;
                    headerRow.appendChild(header);
                });

                tableHeader.appendChild(headerRow);
                dishesTable.appendChild(tableHeader);

                // Tworzenie wierszy tabeli z danymi dań
                const tableBody = document.createElement("tbody");

                restaurant.dishes.forEach(dish => {
                    const row = document.createElement("tr");

                    const idCell = document.createElement("td");
                    idCell.textContent = dish.id;
                    row.appendChild(idCell);

                    const nameCell = document.createElement("td");
                    nameCell.textContent = dish.name;
                    row.appendChild(nameCell);

                    const descriptionCell = document.createElement("td");
                    descriptionCell.textContent = dish.description || "-";
                    row.appendChild(descriptionCell);

                    const priceCell = document.createElement("td");
                    priceCell.textContent = dish.price.toFixed(2);
                    row.appendChild(priceCell);

                    tableBody.appendChild(row);
                });

                dishesTable.appendChild(tableBody);
                restaurantDiv.appendChild(dishesTable);
                restaurantListDiv.appendChild(restaurantDiv);
            });
        }
    </script>
</body>
</html>
